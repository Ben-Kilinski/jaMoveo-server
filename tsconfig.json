{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],                    // ✅ ESSENCIAL
    "typeRoots": ["./node_modules/@types"] // ✅ ESSENCIAL
  },
  "include": ["src", "scripts"], // ✅ inclui suas pastas reais
  "exclude": ["node_modules", "dist"]
}
